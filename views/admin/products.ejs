<% layout('/layout/boilerplate') %>
    <h4>Products</h4>

    <div class="mt-3">
        <%- include('../../partials/adminSide') %>
            <div class="container">
                <div class="d-flex justify-content-end pb-2 mb-2 border-bottom">
                    <a class="btn btn-success" href="product/new">+Add Product</a>
                </div>
                <% for(let item of product) {%>
                    <div class="row pb-1 mb-2 border-bottom">
                        <div class="col-2">
                            <img src="<%= item.image %>" class="img-fluid rounded float-start" width="100" height="100"
                                alt="">
                        </div>
                        <div class="col-2">
                            <%= item.name %>
                        </div>
                        <div class="col-4">
                            <%= item.description %>
                        </div>
                        <div class="col-1">
                            <%= item.category %>
                        </div>
                        <div class="col-1">
                            <%= item.price %>
                        </div>
                        <div class="col-1">
                            <a class="btn btn-primary" href="/admin/product/<%= item._id %>/edit" role="button">Edit</a>
                        </div>
                        <div class="col-1">
                            <a class="btn btn-danger" href="/admin/product/<%= item._id %>/delete"
                                role="button">Delete</a>
                        </div>
                    </div>
                    <% } %>
            </div>
    </div>