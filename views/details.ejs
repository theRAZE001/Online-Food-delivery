<% layout('/layout/boilerplate') %>
  <div class="text-success" id="orderAlert" role="alert">
  </div>
  <% if(currentUser){%>
    <div>
      <h2>Enter Delivery Details</h2>
    </div>
    <div class="container border">
      <form acttion="/order/confirm-order" method="POST" id="orderForm" class="needs-validation" novalidate>
        <div class="row justify-content-center mb-3 mt-5">
          <div class="col-2">
            <label for="name" class="form-label">Billing Name</label>
          </div>
          <div class="col-4">
            <input type="text" class="form-control" id="name" value="<%= currentUser.username %>" name="name" required>
          </div>
        </div>
        <div class="row justify-content-center mb-3">
          <div class="col-2">
            <label for="phone" class="form-label">Phone</label>
          </div>
          <div class="col-4">
            <input type="tel" class="form-control" id="phone" pattern="[0-9]{10}" name="phoneno" required>
          </div>
        </div>
        <div class="row justify-content-center mb-3">
          <div class="col-2">
            <label for="address" class="form-label">Address</label>
          </div>
          <div class="col-4">
            <input type="text" class="form-control" id="address" name="address" required>
          </div>
        </div>
        <div class="row justify-content-center mb-3">
          <div class="col-2">
            <label for="paymentType" class="form-label">Payment Type</label>
          </div>
          <div class="col-4">
            <select class="form-select" aria-label="Default select example" id="paymentType" name="paymentType">
              <option value="cod" selected>Cash on Delivery</option>
              <option value="card">Credit/Debit</option>
            </select>
          </div>
        </div>
        <div class="row justify-content-center mb-3">
          <div class="col-2">
            <label id="cardLabel" for="card-element" class="form-label"></label>
          </div>
          <div class="col-4" id="card-element"></div>
        </div>
        <div class="d-flex justify-content-center mb-5">
          <button type="submit" class="btn btn-success">
            Confirm
