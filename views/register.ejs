<div class="container">
    <div class="row">
        <p class="h1 text-center">Create Account</p>
        <div class="col-lg-6 offset-lg-3">
            <%if(typeof errors !='undefined' ){%>
                <%for(let err of errors){%>
                    <div class="alert alert-danger alert-dismissible d-flex align-items-center fade show" role="alert">
                        <svg class="bi flex-shrink-0 me-2" width="24" height="24" role="img" aria-label="Danger:">
                            <use xlink:href="#exclamation-triangle-fill" />
                        </svg>
                        <strong>
                            <%= err.msg%>
                        </strong>
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                    <%}%>
                        <%}%>
                            <form action="/users/register" class="needs-validation" method="POST" novalidate>
                                <div class="mb-3">
                                    <label for="name" class="form-label">Name</label>
                                    <input type="text" class="form-control" id="name" aria-describedby="emailHelp"
                                        name="name" required placeholder="Enter Name"
                                        value="<%=typeof name !='undefined' ? name:''%>">
                                    <p class="invalid-feedback">
                                        please enter name
                                    </p>
                                </div>
                                <div class="mb-3">
                                    <label for="email" class="form-label">Email</label>
                                    <input type="email" class="form-control" id="email" name="email" required
                                        placeholder="enter a valid email">
                                    <p class="invalid-feedback">
                                        please enter email.
                                    </p>
                                </div>
                                <div class="mb-3">
                                    <label for="password" class="form-label">Password</label>
                                    <input type="password" class="form-control" id="password"
                                        aria-describedby="emailHelp" name="password"
                                        value="<%=typeof password !='undefined' ? password:''%>"
                                        placeholder="Atleast 6 characters" required>
                                    <p class="invalid-feedback">
                                        please enter password.
                                    </p>
                                </div>
                                <div class="mb-3">
                                    <label for="repassword" class="form-label">Confirm password</label>
                                    <input type="password" class="form-control" id="repassword"
                                        aria-describedby="emailHelp" name="repassword"
                                        value="<%=typeof password !='undefined' ? password:''%>"
                                        placeholder="re-enter password" required>
                                    <p class="invalid-feedback">
                                        please renter password.
                                    </p>
                                </div>
                                <button type="submit" class="btn btn-success" id="register">Sign-up</button>
                            </form>
        </div>
    </div>
</div>
<script>
    (function () {
        'use strict'

        // Fetch all the forms we want to apply custom Bootstrap validation styles to
        var forms = document.querySelectorAll('.needs-validation')

        // Loop over them and prevent submission
        Array.prototype.slice.call(forms)
            .forEach(function (form) {
                form.addEventListener('submit', function (event) {
                    if (!form.checkValidity()) {
                        event.preventDefault()
                        event.stopPropagation()
                    }

                    form.classList.add('was-validated')
                }, false)
            })
    })()
</script>